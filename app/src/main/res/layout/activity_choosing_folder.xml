<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp" tools:context=".ChoosingFolderActivity">


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <android.support.v7.widget.Toolbar

            android:id="@+id/my_awesome_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="I want to..."
                android:textColor="#ffffff"
                android:textSize="24sp"/>

        </android.support.v7.widget.Toolbar>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>


        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_awesome_toolbar"

            android:clickable="true">
            <TextView
                android:id="@+id/tv1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv1"

                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="@string/folder_a"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#212121"/>
            <TextView
                android:id="@+id/tv1b"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1a"

                android:layout_toEndOf="@+id/iv1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:text="@string/choice_1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#727272"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:src="@drawable/balance1"
            />
        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL1"
            android:background="?android:attr/listDivider"/>

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RL1"
            android:clickable="true">
            <TextView
                android:id="@+id/tv2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv2"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="@string/folder_b"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#212121"/>
            <TextView
                android:id="@+id/tv2b"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2a"
                android:layout_toEndOf="@+id/iv2"

                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/choice_2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#727272"/>
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:src="@drawable/health1"
            />
        </RelativeLayout>

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL2"
            android:background="?android:attr/listDivider"/>

        <RelativeLayout
            android:id="@+id/RL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RL2"

            android:clickable="true">
            <TextView
                android:id="@+id/tv3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv3"
                android:paddingLeft="16dp"

                android:paddingRight="16dp" android:paddingTop="24dp"
                android:text="@string/folder_c"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#212121"/>
            <TextView
                android:id="@+id/tv3b"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3a"

                android:layout_toEndOf="@+id/iv3"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/choice_3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#727272"/>
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:src="@drawable/motivation1"
            />
        </RelativeLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL3"
            android:background="?android:attr/listDivider"/>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/choosing_goal_hint_text"
        android:id="@+id/IWantToText" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="43dp"/>
</RelativeLayout>

